<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
</head>


<body>
    <header>
        <div class="logo">
            <img src="~/Images/topbg.png" width="1000" height="92" />
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/CompanyInfo/Index">首页</a> |
                        <a class="nav-link" href="/CompanyInfo/Introduction">公司介绍</a> |
                        <a class="nav-link" href="/CompanyInfo/Environment">餐厅环境</a> |
                        <a class="nav-link" href="/News/Index">新闻动态</a> |
                        <a class="nav-link" href="/Dish/Index">美食展示</a> |
                        <a class="nav-link" href="/BookOnline/Index">在线预订</a> |
                        <a class="nav-link" href="/Suggestion/Index">投诉建议</a> |
                        <a class="nav-link" href="/Recruitment/Index">招聘信息</a> |
                        <a class="nav-link" href="/CompanyInfo/JoinUs">加盟连锁</a> |
                        <a class="nav-link" href="/CompanyInfo/AboutUs">关于我们</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="banner">
            <ul id="banner_img">
                <li><img src="~/Images/topflash1.jpg" /></li>
                <li><img src="~/Images/topflash2.jpg" /></li>
            </ul>
            <div class="clear"></div>
            <div class="imgnum">
                <span class="onselect">1</span>
                <span>2</span>
            </div>

        </div>
    </header>
    <div class="container">
        <aside>
            @RenderSection("itemnav", required: false)

            @RenderSection("contact", required: false)

            @RenderSection("companynews", required: false)

            @RenderSection("dishcategory", required: false)

        </aside>
        <section>
            <div class="title">@RenderSection("righttitle", required: false)</div>
            <div>
                @RenderBody()
            </div>
        </section>
    </div>

    <footer>
        <div class="bottom-text">
            <div class="bottom-list">
                <ul>
                    <li>
                        <a>关于我们</a> |
                    </li>
                    <li>
                        <a>联系方式</a> |
                    </li>
                    <li>
                        <a>加盟连锁</a> |
                    </li>
                    <li>
                        <a>投诉建议</a> |
                    </li>
                    <li>
                        <a>友情链接</a>
                    </li>
                </ul>
            </div>
            <div class="copyright">
                版权所有 Copyright(C)2010-2020好运来酒店
            </div>
        </div>
        <div class="bottom">

        </div>
    </footer>

</body>

</html>
